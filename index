    <!-- Script -->
    <script>
        const botonCambiar = document.getElementById('cambiar-texto');
        const textoIntro = document.getElementById('texto-intro');

        botonCambiar.addEventListener('click', () => {
            if (textoIntro.textContent === "Soy un estudiante y me gusta hacer sitios web.") {
                textoIntro.textContent = "¡Estoy aprendiendo a crear cosas geniales con código!";
            } else {
                textoIntro.textContent = "Soy un estudiante y me gusta hacer sitios web.";
            }
        });

        const formulario = document.getElementById('contact-form');
        const mensajeEnvio = document.getElementById('mensaje-envio');

        formulario.addEventListener('submit', (e) => {
            e.preventDefault();

            const nombre = document.getElementById('nombre').value.trim();
            const email = document.getElementById('email').value.trim();
            const mensaje = document.getElementById('mensaje').value.trim();

            let todoCorrecto = true;

            document.getElementById('error-nombre').classList.add('hidden');
            document.getElementById('error-email').classList.add('hidden');
            document.getElementById('error-mensaje').classList.add('hidden');

            if (nombre === '') {
                document.getElementById('error-nombre').classList.remove('hidden');
                todoCorrecto = false;
            }
            if (email === '') {
                document.getElementById('error-email').classList.remove('hidden');
                todoCorrecto = false;
            }
            if (mensaje === '') {
                document.getElementById('error-mensaje').classList.remove('hidden');
                todoCorrecto = false;
            }

            if (todoCorrecto) {
                mensajeEnvio.textContent = "¡Gracias! Tu mensaje fue enviado.";
                mensajeEnvio.classList.remove('hidden');
                mensajeEnvio.classList.remove('text-red-500');
                mensajeEnvio.classList.add('text-green-600');
                formulario.reset();
            } else {
                mensajeEnvio.textContent = "Faltan algunos datos. ¡Por favor, llena todo!";
                mensajeEnvio.classList.remove('hidden');
                mensajeEnvio.classList.remove('text-green-600');
                mensajeEnvio.classList.add('text-red-500');
            }
        });
    </script>
